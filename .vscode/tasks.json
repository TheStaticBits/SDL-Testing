{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C++: Build (Debug)",
			"command": "C:\\msys64\\mingw64\\bin\\g++.exe",
			"args": [
				"-g",
				"src\\*.cpp",
				"-o",
				"${workspaceFolder}\\bin\\debug\\application.exe",
				"-IC:\\SDL2-w64\\include",
				"-LC:\\SDL2-w64\\lib",
				"-lmingw32",
				"-lSDL2main",
				"-lSDL2",
				"-lSDL2_image",
				"-Iinclude",
				"-Wall"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"detail": "Builds C++ project"
		},
		{
			"type": "shell",
			"label": "C++: Run (Debug)",
			"command": "start ${workspaceFolder}\\bin\\debug\\application.exe",
			"detail": "Runs the program"
		},
		{
			"label": "C++: Build & Run (Debug)",
			"dependsOn": [
				"C++: Build (Debug)",
				"C++: Run (Debug)"
			],
			"dependsOrder": "sequence",
			"detail": "Builds and runs the program",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "cppbuild",
			"label": "C++: Build (Release)",
			"command": "C:\\msys64\\mingw64\\bin\\g++.exe",
			"args": [
				"-O3",
				"src\\*.cpp",
				"-o",
				"${workspaceFolder}\\bin\\release\\application.exe",
				"-s",
				"-IC:\\SDL2-w64\\include",
				"-LC:\\SDL2-w64\\lib",
				"-lmingw32",
				"-lSDL2main",
				"-lSDL2",
				"-lSDL2_image",
				"-Iinclude",
				"-Wall"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"detail": "Builds C++ project"
		},
		{
			"type": "shell",
			"label": "C++: Run (Release)",
			"command": "start ${workspaceFolder}\\bin\\release\\application.exe",
			"detail": "Runs the program"
		},
		{
			"label": "C++: Build & Run (Release)",
			"dependsOn": [
				"C++: Build (Release)",
				"C++: Run (Release)"
			],
			"dependsOrder": "sequence",
			"detail": "Builds and runs the program",
			"group": "build"
		},
		{
			"type": "cppbuild",
			"label": "C++ - JS: Build (Debug)",
			"command": "em++",
			"args": [
				"-g",
				"src\\animation.cpp",
				"src\\entity.cpp",
				"src\\game.cpp",
				"src\\main.cpp",
				"src\\particle.cpp",
				"src\\player.cpp",
				"src\\window.cpp",
				"src\\world.cpp",
				"-s", "WASM=1",
				"-s", "USE_SDL=2",
				"--preload-file", "res",
				"-s", "USE_SDL_IMAGE=2",
				"-s", "SDL2_IMAGE_FORMATS='[\"png\"]'",
				"-s", "ASYNCIFY=1",
				"-o",
				"bin\\web\\application.js",
				"-Iinclude",
				"-Wall"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"detail": "Builds C++ project to JS"
		},
		{
			"type": "cppbuild",
			"label": "C++ - JS: Build (Release)",
			"command": "em++",
			"args": [
				"-O3",
				"src\\animation.cpp",
				"src\\entity.cpp",
				"src\\game.cpp",
				"src\\main.cpp",
				"src\\particle.cpp",
				"src\\player.cpp",
				"src\\window.cpp",
				"src\\world.cpp",
				"-lSDL",
				"-s", "USE_SDL=2",
				"--preload-file", "res",
				"-s", "WASM=1",
				"-s", "USE_SDL_IMAGE=2",
				"-s", "SDL2_IMAGE_FORMATS='[\"png\"]'",
				"-s", "ASYNCIFY=1",
				"-o",
				"bin\\web\\application.js",
				"-Iinclude",
				"-Wall"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"detail": "Builds C++ project to JS"
		},
		{
			"type": "shell",
			"label": "Update Res Folder (Debug)",
			"command": "Xcopy res bin\\debug\\res /e/h/c/i/y",
			"detail": "Copies the res folder into the bin/debug folder"
		},
		{
			"type": "shell",
			"label": "Update Res Folder (Release)",
			"command": "Xcopy res bin\\release\\res /e/h/c/i/y",
			"detail": "Copies the res folder into the bin/release folder"
		},
		{
			"type": "shell",
			"label": "Update Res Folder (Web)",
			"command": "Xcopy res bin\\web\\res /e/h/c/i/y",
			"detail": "Copies the res folder into the bin/web folder"
		},
		{
			"label": "Update Res Folder (ALL)",
			"dependsOn": [
				"Update Res Folder (Debug)",
				"Update Res Folder (Release)",
				"Update Res Folder (Web)"
			],
			"dependsOrder": "sequence",
			"detail": "Copies the res folder into both debug and release folders",
			"problemMatcher": []
		}
	]
}